{
  "name": "create-js-app",
  "version": "1.1.2",
  "description": "",
  "author": "Michal Lester",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "directories": {
    "example": "examples",
    "test": "tests"
  },
  "bin": {
    "create-js-app": "./dist/index.js"
  },
  "scripts": {
    "start-ts": "ts-node src/index.ts",
    "start-ts:watch": "nodemon --watch src --exec ts-node src/index.ts",
    "build": "tsc && shx rm -rf dist/templates && shx cp -r templates dist",
    "start": "node dist/index.js",
    "prettier": "prettier --write \"{,!(node_modules|dist|build|coverage)/**/}*.{js,jsx,ts,tsx,json,css,scss}\"",
    "pre-commit": "npm run tslint:fix && npm run prettier",
    "tslint": "tslint --project tsconfig.json",
    "tslint:fix": "tslint --project tsconfig.json --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  },
  "lint-staged": {
    "*.{ts,js,json,css,md}": [
      "npm run tslint --project tsconfig.json --fix",
      "npm run prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/czechue/create-js-app.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/czechue/create-js-app/issues"
  },
  "homepage": "https://github.com/czechue/create-js-app#readme",
  "devDependencies": {
    "@types/inquirer": "0.0.44",
    "@types/node": "^11.11.3",
    "@types/ejs": "^2.6.3",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "shx": "^0.3.2",
    "tslint": "^5.14.0",
    "ts-node": "^8.0.3",
    "tslint-config-prettier": "^1.18.0"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "ejs": "^2.6.1",
    "inquirer": "^6.2.2",
    "typescript": "^3.3.3333"
  }
}
